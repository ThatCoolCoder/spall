<div style="width:200px;height:100px;background-color:red">
Render counter
<br />
I've rendered ${this.renderCounter + 1} times
</div>

<script>
    onInitialized() {
        this.renderCounter = 0;
        setInterval(() => this.needsRender(), 5000);
    }

    onRender() {
        this.renderCounter ++;
    }
</script>