<div style="width:50px;height:50px;background-color:red">Render counter</div>

<script>
    onInitialized() {
        this.renderCounter = 0;
        setInterval(() => this.needsRender(), 5000);
    }

    onRender() {
        this.renderCounter ++;
        console.log(`Rendered ${this.renderCounter} times`);
    }
</script>