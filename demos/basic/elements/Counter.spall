<button !onclick="this.count()">Clicked ${this.formatCount()}</button>

~if (this.counter >= 5) {
    <span>Has been clicked a lot</span>
~}

<script>
    onInitialized() {
        this.counter = 0;
    }

    count() {
        this.counter ++;
        this.needsRender();
    }

    formatCount() {
        return `${this.counter} ${this.counter == 1 ? 'time' : 'times'}`;
    }
</script>